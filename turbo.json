{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["generate"],
      "inputs": ["prisma/schema.prisma", "src/**/*", "tsconfig.json"],
      "outputs": [".next/**"],
      "passThroughEnv": [
        "DATABASE_URL",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "MAGIC_SK",
        "NEXT_PUBLIC_MAGIC_PK",
        "NEXTAUTH_SECRET",
        "NEXTAUTH_URL",
        "S3_UPLOAD_BUCKET",
        "S3_UPLOAD_KEY",
        "S3_UPLOAD_REGION",
        "S3_UPLOAD_SECRET"
      ]
    },
    "dev": {
      "cache": false,
      "dependsOn": ["generate"],
      "persistent": true
    },
    "format": {
      "inputs": ["src/**/*"]
    },
    "generate": {
      "cache": true,
      "dependsOn": ["generate:nexus"]
    },
    "generate:nexus": {
      "cache": true,
      "dependsOn": ["generate:prisma"]
    },
    "generate:prisma": {
      "cache": true
    },
    "lint": {
      "inputs": ["src/**/*"]
    },
    "migrate:deploy": {
      "inputs": ["prisma/migrations/**/*", "prisma/schema.prisma"]
    },
    "migrate:dev": {
      "inputs": ["prisma/migrations/**/*", "prisma/schema.prisma"]
    },
    "migrate:status": {
      "inputs": ["prisma/migrations/**/*", "prisma/schema.prisma"]
    },
    "start": {
      "dependsOn": ["migrate:deploy"],
      "inputs": [".next/**"]
    },
    "test": {
      "dependsOn": ["test:unit", "test:knip"],
      "inputs": ["src/**/*"]
    },
    "test:knip": {
      "cache": false
    },
    "test:unit": {
      "inputs": ["src/**/*"]
    },
    "typecheck": {
      "cache": true
    }
  }
}
